#include<bits/stdc++.h>
using namespace std;
#define fastio() ios_base::sync_with_stdio(false), cin.tie(nullptr), cout.tie(nullptr);
int main(){
    int t;
    cin>>t;
    while(t--){
    int N;
    cin>>N;
    string s;
    cin>>s;
    int cnt = 0;
    for (int i = 1; i < N; i++) {
        if (s[i] == s[i - 1]) {
            cnt++;
        }
    }
    cout<<cnt<<'\n';
    }

}
